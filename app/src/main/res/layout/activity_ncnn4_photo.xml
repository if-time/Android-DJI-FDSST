<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test.ncnn.ncnn4example.Ncnn4PhotoActivity">

    <LinearLayout
        android:id="@+id/btnLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnUsePhoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="相册" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvResultText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@id/btnLl"
        android:hint="预测结果会在这里显示"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/ivShowImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tvResultText"
        android:layout_alignParentTop="true" />

</RelativeLayout>
