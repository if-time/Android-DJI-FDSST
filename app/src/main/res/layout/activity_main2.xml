<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--    <com.dji.FPVDemo.view.AutoFitTextureView-->
    <!--        android:id="@+id/tvVideoPreviewer"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent" />-->

    <TextureView
        android:id="@+id/tvVideoPreviewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.dji.FPVDemo.view.TouchPaintView
        android:id="@+id/tpvTouchFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/ivImageViewForFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <com.dji.FPVDemo.view.OverlayView
        android:id="@+id/ovTrackingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tvFPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="60"
        android:textColor="@color/red"
        android:textSize="21sp" />

    <ImageView
        android:id="@+id/ivSimulatorSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llBtns"
        android:layout_marginTop="12dp"
        android:src="@mipmap/ic_remote_control"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/ivTrackingDrawerControlIb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:background="#ff000000"
        android:src="@mipmap/ic_sliding_drawer"
        android:visibility="visible" />

    <SlidingDrawer
        android:id="@+id/sdTrackingDrawer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:content="@+id/rlTrackingDrawerContent"
        android:handle="@+id/tracking_handle"
        android:orientation="horizontal">


        <ImageView
            android:id="@id/tracking_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@id/rlTrackingDrawerContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:fillViewport="true"
                android:scrollbars="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvTrackingPushInfo"
                        style="@style/test_text"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:text="@string/push_info" />

                </RelativeLayout>

            </ScrollView>

        </RelativeLayout>

    </SlidingDrawer>

    <LinearLayout
        android:id="@+id/llBtns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnThermalCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CameraCapturePanel"
            android:layout_marginEnd="10dp"
            android:text="红外" />

        <Button
            android:id="@+id/btnBackgroundThread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CameraCapturePanel"
            android:layout_marginEnd="10dp"
            android:text="检测" />

    </LinearLayout>

</RelativeLayout>

